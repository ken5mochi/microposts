<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @users.any? %>
      <h3>Followers (<%= @user.follower_relationships.count %>)</h3>
      <ol class="followers">
        <%= render @users %>
      </ol>
    <% end %>
  </div>
</div>